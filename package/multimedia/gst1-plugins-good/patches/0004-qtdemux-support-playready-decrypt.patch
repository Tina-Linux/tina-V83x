+			dolicense++;
+			goto DOLICENSE;
+		}
+    }
+    free(Header);
+
+    if (!success){
+		playready_doLicensed = TRUE;
+		pthread_mutex_unlock(&playready_mutex);
+		GST_INFO("license succeed.");
+        return 0;
+    }
+
+ErrorExit:
+	pthread_mutex_unlock(&playready_mutex);
+    GST_ERROR("license failed return=0x%x.", (int)success);
+    return -1;
