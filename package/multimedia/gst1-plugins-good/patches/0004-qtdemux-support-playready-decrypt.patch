+static int base64_encode(const unsigned char *in,  unsigned long len,
+                        unsigned char *out)
+{
+   unsigned long i, leven;
+   unsigned char *p;
+
+   p = out;
+   leven = 3*(len / 3);
+   for (i = 0; i < leven; i += 3) {
+       *p++ = codes[in[0] >> 2];
+       *p++ = codes[((in[0] & 3) << 4) + (in[1] >> 4)];
+       *p++ = codes[((in[1] & 0xf) << 2) + (in[2] >> 6)];
+       *p++ = codes[in[2] & 0x3f];
+       in += 3;
+   }
+   if (i < len) {
+       unsigned a = in[0];
+       unsigned b = (i+1 < len) ? in[1] : 0;
+       unsigned c = 0;
+
+       *p++ = codes[a >> 2];
+       *p++ = codes[((a & 3) << 4) + (b >> 4)];
+       *p++ = (i+1 < len) ? codes[((b & 0xf) << 2) + (c >> 6)] : '=';
+       *p++ = '=';
+   }
+
+   *p = '\0';
+
+   return p - out;
+}
