#!/bin/sh
# get boot media
# output: "sdcard" | "emmc" | "nand" | "nor-flash"
# example: var=`get_boot_media`

case "$(sed 's/ /\n/g' /proc/cmdline | awk -F= '/^root=/{print $2}')" in
	/dev/mmcblk*)
		readlink /sys/block/mmcblk0 | grep "sunxi-mmc\.2\|sdc2" &>/dev/null \
			&& echo "emmc" \
			|| echo "sdcard"
		;;
	/dev/nand*)
		echo nand
		;;
	/dev/mtdblock*)
		echo nor-flash
		;;
esac
